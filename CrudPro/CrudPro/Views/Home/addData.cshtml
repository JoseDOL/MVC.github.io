@model CrudPro.Models.Persona
@{
    ViewData["Title"] = "CREAR REGISTRO";
}

<div class="d-flex align-items-start justify-content-center" style="min-height: 100vh;">
    <div class="card neon-border text-center" style="width: 35rem;">
        <div class="card-header bg-secondary rounded">
            <h5 class="card-title"> CREAR REGISTRO </h5>
        </div>
        <div class="card-body bg-secondary rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <form id="addForm" asp-action="addData">
                <div class="form-group">
                    <label asp-for="dpi" class="form-label"></label>
                    <i class="bi bi-person"></i>
                    <input type="text" class="form-control neon-input" id="dpi" name="dpi" autocomplete="off">
                    <span asp-validation-for="dpi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nombre" class="form-label"></label>
                    <i class="bi bi-person"></i>
                    <input type="text" class="form-control neon-input" id="nombres" name="nombres">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="apellidos">Apellidos <i class="bi bi-person"></i></label>
                    <input type="text" class="form-control neon-input" id="apellidos" name="apellidos">
                    <span class="validation-icon"></span>
                </div>
                <div class="form-group">
                    <label for="profesion">Profesión <i class="bi bi-pencil"></i></label>
                    <input type="text" class="form-control neon-input" id="profesion" name="profesion">
                    <span class="validation-icon"></span>
                </div>
                <div class="form-group">
                    <label for="fecha_nacimiento">Fecha de Nacimiento <i class="bi bi-calendar"></i></label>
                    <input type="date" class="form-control neon-input" id="fecha_nacimiento" name="fecha_nacimiento">
                    <span class="validation-icon"></span>
                </div>
                <div class="form-group">
                    <label for="edad">Edad <i class="bi bi-person"></i></label>
                    <input type="text" class="form-control neon-input" id="edad" name="edad">
                    <span class="validation-icon"></span>
                </div>
                <div class="form-group">
                    <label for="telefono">Teléfono <i class="bi bi-telephone"></i></label>
                    <input type="text" class="form-control neon-input" id="telefono" name="telefono">
                    <span class="validation-icon"></span>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>

        </div>
    </div>
</div>

<script src="~/js/vistas/addData.js" asp-append-version="true"></script>