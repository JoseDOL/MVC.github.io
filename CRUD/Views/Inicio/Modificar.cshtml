@model cDpi
@{
    ViewData["Title"] = "Modificar";
}

<div class="m-0 row justify-content-center align-items-center">
    <div class="col-auto text-center">
        <h1 class="bi bi-pen">Modificar</h1>
    </div>
</div>

<div class="m-0 mt-3 row justify-content-center align-items-center ">
    <div class="card col-auto bg-secondary bg-gradient " style="width: 60rem;">

        <form class="card-body" asp-action="_ParcialActualizar2">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="mb-3">
                <label  class="form-label">Ingrese su DPI </label>
                <input type="number" asp-for="dpi" class="form-control" autocomplete="off" />
                <span asp-validation-for="dpi" class="text-danger"></span>
            </div>

            <div class=" mb-3 row justify-content-center align-items-center " style="width:100%;">
                <button id="btn-mod" class="btn btn-primary col-auto" style="width:30%;" type="submit">Buscar</button>
            </div>
        </form>


    </div>
</div>


<div id="vParcial">
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Modificar.js" asp-append-version="true"></script>
    <script src="~/js/vistaM.js" asp-append-version="true"></script>
 }
