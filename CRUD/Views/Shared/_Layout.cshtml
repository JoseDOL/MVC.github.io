<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRUD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CRUD.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" asp-append-version="true" />
   
</head>
<body class="bg-dark text-white">
    <header>
        <nav class="navbar navbar-expand-sm text-white navbar-toggleable-sm navbar-light bg-primary  box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white bi bi-clipboard2-plus-fill" asp-area="" asp-controller="Inicio" asp-action="Crear">CRUD</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white bi bi-pen" asp-area="" asp-controller="Inicio" asp-action="Modificar">Modificar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white bi bi-check2-square" asp-area="" asp-controller="Inicio" asp-action="Desactivar">Desactivar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white bi bi-trash3" asp-area="" asp-controller="Inicio" asp-action="Eliminar">Eliminar</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @RenderBody()

    <footer class=" footer text-muted">
        <div class="container">
            &copy; 2023 - CRUD - Jose David Ordoñez Lima
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/carga.js" asp-append-version="true"></script>
  

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
